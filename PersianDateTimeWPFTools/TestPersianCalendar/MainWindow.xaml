<Window
    x:Class="TestPersianCalendar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TestPersianCalendar"
    xmlns:pdtt="https://github.com/Behnam2064/PersianDateTimeWPFTools"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Title="MainWindow"
    Height="900"
    Width="950">
    <Border
        Background="#FFF3F3F3">
        <DockPanel>
            <TextBlock
                DockPanel.Dock="Top">
                <Run>Changing the Calendar Culture Manually</Run>
                <LineBreak />
                <Run>Note that changing the Culture is usually done only once when initializing the software</Run>
                <LineBreak />
                <Run>Or when changing the software language.</Run>
                <LineBreak />
                <Run>However, you can change it at any time.</Run>
            </TextBlock>
            <ComboBox
                DockPanel.Dock="Top"
                x:Name="cb">
                <ComboBoxItem
                    IsSelected="True">fa-IR</ComboBoxItem>
                <ComboBoxItem>en-US</ComboBoxItem>
            </ComboBox>

            <ToggleButton
                DockPanel.Dock="Top" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Checked">Change culture C#</ToggleButton>
            <DockPanel
                DockPanel.Dock="Top">
                <ToggleButton
                    Margin="2"
                    Content="Show today button"
                    x:Name="tbShowToday" />

                <ToggleButton
                    Margin="2"
                    Content="Allow Select Blacked Out Day"
                    x:Name="tbSelectBlackedOutDay" />

            </DockPanel>
            <TabControl>
                <TabItem
                    Header="Main">
                    <ScrollViewer>

                        <Grid
                            Background="#FF8A8A8A"
                            Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <DockPanel
                                Grid.ColumnSpan="2">

                                <pdtt:PersianCalendar
                                    x:Name="pc1"
                                    CustomCultureName="{Binding ElementName=cb, Path=SelectedItem.Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    ShowTodayButton="{Binding ElementName=tbShowToday, Path=IsChecked, Mode=OneWay}"
                                    AllowSelectBlackedOutDay="{Binding ElementName=tbSelectBlackedOutDay, Path=IsChecked, Mode=OneWay}"
                                    Margin="10" />

                                <pdtt:PersianCalendarWithClock
                                    x:Name="pcwc1"
                                    Margin="10"
                                    Grid.Column="1"
                                    AllowSelectBlackedOutDay="{Binding ElementName=tbSelectBlackedOutDay, Path=IsChecked, Mode=OneWay}"
                                    ShowTodayButton="{Binding ElementName=tbShowToday, Path=IsChecked, Mode=OneWay}"
                                    CustomCultureName="{Binding ElementName=cb, Path=SelectedItem.Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>

                            <DockPanel
                                Grid.Column="0"
                                Grid.Row="1"
                                Grid.ColumnSpan="2">

                                <pdtt:Clock
                                    x:Name="clock"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Margin="10" />

                                <pdtt:PersianDatePicker
                                    DockPanel.Dock="Top"
                                    x:Name="pdp1"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    AllowSelectBlackedOutDay="{Binding ElementName=tbSelectBlackedOutDay, Path=IsChecked, Mode=OneWay}"
                                    ShowTodayButton="{Binding ElementName=tbShowToday, Path=IsChecked, Mode=OneWay}"
                                    CustomCultureName="{Binding ElementName=cb, Path=SelectedItem.Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                    MinHeight="30"
                                    Margin="10" />
                                <pdtt:PersianDateTimePicker
                                    x:Name="pdtp1"
                                    DockPanel.Dock="Top"
                                    VerticalAlignment="Center"
                                    MinHeight="30"
                                    Margin="10"
                                    AllowSelectBlackedOutDay="{Binding ElementName=tbSelectBlackedOutDay, Path=IsChecked, Mode=OneWay}"
                                    ShowTodayButton="{Binding ElementName=tbShowToday, Path=IsChecked, Mode=OneWay}"
                                    CustomCultureName="{Binding ElementName=cb, Path=SelectedItem.Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DockPanel>
                        </Grid>

                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Border>
</Window>
