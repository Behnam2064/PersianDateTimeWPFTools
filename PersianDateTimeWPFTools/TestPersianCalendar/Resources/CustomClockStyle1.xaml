<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:pdtt="https://github.com/Behnam2064/PersianDateTimeWPFTools">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/PersianDateTimeWPFTools;component/Resources/PredefiendDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush
        x:Key="SelectedButtonBackgroundColor"
        Color="#FFF51C6B" />

    <SolidColorBrush
        x:Key="ClockBackground"
        Color="#FF121111" />

    <SolidColorBrush
        x:Key="ClockBorderBrush"
        Color="Black" />

    <SolidColorBrush
        x:Key="ClockBodyBackground"
        Color="#FF4C4C4C" />

    <SolidColorBrush
        x:Key="NormalForeground"
        Color="#FFB3B3B3" />

    <SolidColorBrush
        x:Key="ClockHourButtonBackground"
        Color="#FF1B1B1B" />

    <Style
        x:Key="ClockRadioButtonStyle"
        TargetType="{x:Type RadioButton}">
        <Setter
            Property="Control.BorderThickness"
            Value="1" />
        <Setter
            Property="Control.VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Control.HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Control.Foreground"
            Value="{DynamicResource NormalForeground}" />
        <Setter
            Property="UIElement.Focusable"
            Value="False" />
        <Setter
            Property="FrameworkElement.Width"
            Value="28" />
        <Setter
            Property="FrameworkElement.Height"
            Value="28" />
        <Setter
            Property="Control.Background"
            Value="{DynamicResource SelectedButtonBackgroundColor}" />
        <Setter
            Property="Control.Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type RadioButton}">
                    <FrameworkTemplate.Resources>
                        <Storyboard
                            x:Key="Storyboard1">
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Opacity"
                                Storyboard.TargetName="optionMark">
                                <EasingDoubleKeyFrame
                                    KeyTime="0:0:0.2"
                                    Value="1" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard
                            x:Key="Storyboard2">
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Opacity"
                                Storyboard.TargetName="optionMark">
                                <EasingDoubleKeyFrame
                                    KeyTime="0"
                                    Value="0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </FrameworkTemplate.Resources>
                    <Grid
                        x:Name="templateRoot"
                        Background="Transparent"
                        SnapsToDevicePixels="True">
                        <Rectangle
                            x:Name="optionMark"
                            Fill="{TemplateBinding Control.Background}"
                            MinWidth="6"
                            MinHeight="6"
                            RadiusX="5"
                            RadiusY="5"
                            Opacity="0" />
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Focusable="False"
                            HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                            Margin="{TemplateBinding Control.Padding}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="ToggleButton.IsChecked"
                            Value="true">
                            <TriggerBase.EnterActions>
                                <BeginStoryboard
                                    Storyboard="{StaticResource Storyboard1}" />
                            </TriggerBase.EnterActions>
                            <TriggerBase.ExitActions>
                                <BeginStoryboard
                                    Storyboard="{StaticResource Storyboard2}" />
                            </TriggerBase.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger
                Property="ToggleButton.IsChecked"
                Value="True">
                <Setter
                    Property="Control.Background"
                    Value="{DynamicResource DayButtonHighlightBorderBrushPressed}" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style
        x:Key="ClockHourRadioButtonStyle"
        TargetType="{x:Type RadioButton}">
        <Setter
            Property="Control.BorderThickness"
            Value="1" />
        <Setter
            Property="Control.VerticalContentAlignment"
            Value="Center" />
        <Setter
            Property="Control.HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Control.Foreground"
            Value="{DynamicResource NormalForeground}" />
        <Setter
            Property="UIElement.Focusable"
            Value="False" />
        <Setter
            Property="FrameworkElement.Width"
            Value="28" />
        <Setter
            Property="FrameworkElement.Height"
            Value="28" />
        <Setter
            Property="Background"
            Value="{DynamicResource SelectedButtonBackgroundColor}" />
        <Setter
            Property="Control.Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type RadioButton}">
                    <FrameworkTemplate.Resources>
                        <Storyboard
                            x:Key="Storyboard1">
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Opacity"
                                Storyboard.TargetName="optionMark">
                                <EasingDoubleKeyFrame
                                    KeyTime="0:0:0.2"
                                    Value="1" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard
                            x:Key="Storyboard2">
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="Opacity"
                                Storyboard.TargetName="optionMark">
                                <EasingDoubleKeyFrame
                                    KeyTime="0"
                                    Value="0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </FrameworkTemplate.Resources>
                    <Grid
                        x:Name="templateRoot"
                        Background="Transparent"
                        SnapsToDevicePixels="True">
                        <Ellipse
                            x:Name="optionMark"
                            Fill="{DynamicResource SelectedButtonBackgroundColor}"
                            MinWidth="6"
                            MinHeight="6"
                            Opacity="0" />
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Focusable="False"
                            HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                            Margin="{TemplateBinding Control.Padding}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger
                            Property="ToggleButton.IsChecked"
                            Value="true">
                            <TriggerBase.EnterActions>
                                <BeginStoryboard
                                    Storyboard="{StaticResource Storyboard1}" />
                            </TriggerBase.EnterActions>
                            <TriggerBase.ExitActions>
                                <BeginStoryboard
                                    Storyboard="{StaticResource Storyboard2}" />
                            </TriggerBase.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger
                Property="ToggleButton.IsChecked"
                Value="True">
                <Setter
                    Property="Control.Background"
                    Value="{DynamicResource DayButtonHighlightBorderBrushPressed}" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style
        TargetType="{x:Type pdtt:Clock}">
        <Setter
            Property="UIElement.Focusable"
            Value="False" />
        <Setter
            Property="Control.BorderBrush"
            Value="{DynamicResource ClockBorderBrush}" />
        <Setter
            Property="Control.Background"
            Value="{DynamicResource ClockBackground}" />
        <Setter
            Property="pdtt:Clock.ClockRadioButtonStyle"
            Value="{StaticResource ClockRadioButtonStyle}" />
        <Setter
            Property="pdtt:Clock.ClockRadioButtonHourStyle"
            Value="{StaticResource ClockHourRadioButtonStyle}" />
        <Setter
            Property="pdtt:TitleElement.Background"
            Value="{DynamicResource TitleBrush}" />
        <Setter
            Property="BorderThickness"
            Value="2" />
        <Setter
            Property="pdtt:BorderElement.CornerRadius"
            Value="5" />
        <Setter
            Property="Foreground"
            Value="{DynamicResource NormalForeground}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="Control.Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type pdtt:Clock}">

                    <pdtt:ThemeShadowChrome
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                        x:Name="Shdw"
                        IsShadowEnabled="{DynamicResource {x:Static SystemParameters.DropShadowKey}}"
                        CornerRadius="{TemplateBinding pdtt:ControlHelper.CornerRadius}"
                        SnapsToDevicePixels="True"
                        pdtt:OpeningAnimationHelper.Storyboard="{DynamicResource OpeningStoryboard}">
                        <FrameworkElement.Resources>
                            <Storyboard
                                x:Key="OpeningStoryboard">
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Opacity"
                                    From="0"
                                    To="1"
                                    Duration="0:0:0.100"
                                    Storyboard.Target="{Binding ElementName=Shdw}" />
                            </Storyboard>
                        </FrameworkElement.Resources>

                        <Grid>

                            <Border
                                BorderBrush="{TemplateBinding Control.BorderBrush}"
                                BorderThickness="{TemplateBinding Control.BorderThickness}"
                                Background="{TemplateBinding Control.Background}"
                                Effect="{StaticResource EffectShadow2}"
                                CornerRadius="5" />

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Margin="0,6"
                                    Name="PART_BorderTitle"
                                    Grid.ColumnSpan="3">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Grid
                                            ShowGridLines="False">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition
                                                    Width="auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Visibility="Collapsed"
                                                Margin="10,0"
                                                x:Name="PART_TimeStr"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                FontSize="20"
                                                Foreground="{DynamicResource NormalForeground}" />

                                            <Rectangle
                                                Height="45"
                                                Width="45"
                                                Fill="{DynamicResource ClockHourButtonBackground}"
                                                RadiusX="3"
                                                RadiusY="3" />

                                            <Rectangle
                                                Grid.Column="2"
                                                Height="45"
                                                Width="45"
                                                Fill="{DynamicResource ClockHourButtonBackground}"
                                                RadiusX="3"
                                                RadiusY="3" />

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                FontSize="35"
                                                Text="{Binding Path=Text, ElementName=PART_TimeStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={pdtt:TimeStringConverter StringInputType=HH_MM_ss_String, StringOutputType=Hour}}"
                                                Foreground="{DynamicResource NormalForeground}" />

                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                FontSize="35"
                                                Text=":"
                                                Foreground="{DynamicResource NormalForeground}" />


                                            <TextBlock
                                                Grid.Column="2"
                                                Margin="0,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                FontSize="35"
                                                Text="{Binding Path=Text, ElementName=PART_TimeStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={pdtt:TimeStringConverter StringInputType=HH_MM_ss_String, StringOutputType=Minute}}"
                                                Foreground="{DynamicResource NormalForeground}" />
                                        </Grid>

                                        <DockPanel
                                            Margin="22,0,0,0"
                                            LastChildFill="False"
                                            Grid.Column="1">


                                            <RadioButton
                                                x:Name="PART_ButtonAm"
                                                Grid.Row="0"
                                                Background="{DynamicResource SelectedButtonBackgroundColor}"
                                                Grid.Column="0"
                                                IsChecked="True"
                                                Height="45"
                                                Width="45"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource ClockRadioButtonStyle}"
                                                Content="{DynamicResource AmText}" />
                                            <RadioButton
                                                x:Name="PART_ButtonPm"
                                                Background="{DynamicResource SelectedButtonBackgroundColor}"
                                                Grid.Row="1"
                                                Height="45"
                                                Width="45"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource ClockRadioButtonStyle}"
                                                Content="{DynamicResource PmText}" />
                                        </DockPanel>


                                    </Grid>
                                </Border>
                                <Canvas
                                    Name="PART_Canvas"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Margin="16,35"
                                    VerticalAlignment="Center"
                                    Width="200"
                                    Height="265">
                                    <Border
                                        Background="{DynamicResource ClockBodyBackground}"
                                        Width="200"
                                        Height="200"
                                        CornerRadius="110" />
                                    <pdtt:ClockPanel
                                        x:Name="PART_PanelNum"
                                        Diameter="160"
                                        KeepVertical="True"
                                        Margin="24,24,0,0"
                                        OffsetAngle="-60" />
                                    <Border
                                        Name="PART_BorderClock"
                                        Focusable="False"
                                        Background="{DynamicResource SelectedButtonBackgroundColor}"
                                        RenderTransformOrigin="0.5,1"
                                        Height="68"
                                        Width="2"
                                        Canvas.Left="105"
                                        Canvas.Top="35" />
                                    <Ellipse
                                        Fill="{DynamicResource SelectedButtonBackgroundColor}"
                                        Width="8"
                                        Height="8"
                                        StrokeThickness="1"
                                        Stroke="{Binding ElementName=PART_BorderClock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=Background}"
                                        Canvas.Top="99"
                                        Canvas.Left="102" />
                                </Canvas>


                            </Grid>

                            <TextBlock
                                Visibility="Collapsed"
                                Grid.Column="2"
                                Margin="0,20"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                FontSize="35"
                                Text="{Binding Path=Text, ElementName=PART_TimeStr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={pdtt:TimeStringConverter StringInputType=HH_MM_ss_String, StringOutputType=Second}}"
                                Foreground="{DynamicResource NormalForeground}" />
                        </Grid>
                    </pdtt:ThemeShadowChrome>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--<Style
        TargetType="{x:Type pdtt:Clock}"
        BasedOn="{StaticResource ClockBaseStyle}" />-->

</ResourceDictionary>