                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition
                                Height="auto" />
                        </Grid.RowDefinitions>
                        <pdtwt:CalendarItem
                            x:Name="PART_CalendarItem"
                            BorderBrush="{TemplateBinding Control.BorderBrush}"
