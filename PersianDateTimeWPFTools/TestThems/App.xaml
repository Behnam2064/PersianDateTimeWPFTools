<Application
    x:Class="TestThems.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TestThems"
    xmlns:pdtt="https://github.com/Behnam2064/PersianDateTimeWPFTools"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--You can still add the required resources using the previous method of adding Resources.-->
                <!--You can also automatically change the control language using-->
                <!--If you remove the following resources, nothing will be displayed in design mode.-->
                <!--<ResourceDictionary
                    Source="pack://application:,,,/PersianDateTimeWPFTools;component/Resources.xaml" />-->
                <pdtt:InitResources
                    SelectedTheme="DarkModern1" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>